.modal.fade{ id: status[:extras][:snaked_name], role: "dialog", "aria-labelledby": "sv-info", "aria-hidden": true }
  .modal-dialog{ role: "document" }
    .modal-content
      .modal-header
        %h5.modal-title= status[:hostname]
        %button.close{ type: "button", "data-dismiss": "modal", "aria-label": "Close" }
          %span{ "aria-hidden": "true" } &times;

      .modal-body
        %table#sv-info-table.table.table-bordered
          %thead
            %tr
              %th Name
              %th Frags
              %th Ping
              %th Time Online
          %tbody
            - status[:players].each do |player|
              %tr
                %td= player[:name]
                %td= player[:frags]
                %td= player[:ping]
                %td "-"
